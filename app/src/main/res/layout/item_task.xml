<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle"
    android:backgroundTint="#E0F3FFFF"
    android:layout_margin="10dp"
    android:padding="1dp">
    <TextView
        android:id="@+id/tvTaskTitle"
        android:padding="10dp"
        app:drawableEndCompat="@drawable/ic_person"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_top_corner"
        android:text="Remember to handle user interactions, error states, and edge cases for a robust and user-friendly experience." />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTaskTitle">

        <!-- First Row, First Column -->
        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text= "@string/app_name"
            android:drawableStart="@drawable/ic_home"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:gravity="center|start"
            android:ellipsize="none"
            android:scrollHorizontally="true"
            android:scrollbars="none"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvSecondTextView"/>

        <!-- First Row, Second Column -->
        <TextView
            android:id="@+id/tvSecondTextView"
            android:layout_width="0dp"
            android:drawableStart="@drawable/ic_person"
            android:layout_height="wrap_content"
            android:text="janvi ka subject hard hai na"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:ellipsize="none"
            android:gravity="center|start"
            android:scrollHorizontally="true"
            android:scrollbars="none"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvProjectName"
            app:layout_constraintEnd_toStartOf="@id/tvThirdTextView"/>

        <!-- First Row, Third Column (outside weight constraint) -->
        <TextView
            android:id="@+id/tvThirdTextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="In Progress"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:padding="5dp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Second Row, First Column -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12.07.2023"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:gravity="center|start"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@id/tvProjectName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvFourthTextView"/>

        <!-- Second Row, Second Column -->
        <TextView
            android:id="@+id/tvFourthTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:maxLines="1"
            android:gravity="center|start"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@id/tvSecondTextView"
            app:layout_constraintStart_toEndOf="@id/tvDate"
            app:layout_constraintEnd_toStartOf="@id/tvThirdTextViewSecondRow"/>

        <!-- Second Row, Third Column (outside weight constraint) -->
        <TextView
            android:id="@+id/tvThirdTextViewSecondRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.03.202"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvThirdTextView"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bottom_corner"
        android:backgroundTint="#00C853"
        android:textColor="@color/white"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/clDetails"
        android:text="Play"
        android:fontFamily="@font/robotobold"/>



</androidx.constraintlayout.widget.ConstraintLayout>